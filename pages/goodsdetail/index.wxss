/* pages/goodsdetail/index.wxss */
/* 首图 */
.image {
    width: 750rpx;
    text-align: center;
    margin-bottom: 20rpx;
}
/* 名称 */
.name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    text-align: center;
    color: #000;
    font-weight: 700;
    padding: 10rpx;
}
/* 限制 */
.must {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-align: center;
  color: #ccc;
  padding: 10rpx;
}
/* 其它 */
.else {
  display: flex;
  justify-content: space-around;
  align-items: center;
}
/* 价格 */
.price .rmb {
  font-size: 30rpx;
  color:#f00;
  margin-right: 10rpx;
}

.price .nums {
  font-size: 50rpx;
  color: #f00;
}

/* 富文本框 */
.richtext {
  margin-bottom: 130rpx;
}