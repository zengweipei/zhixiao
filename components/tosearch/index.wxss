/* 搜索框 */
.search{
  padding:20rpx;
  background:#2dceff;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  z-index: 99;
}
/* 搜索框的输入框 */
.search-input{
  height:60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  border-radius: 30rpx;
  font-size:14px;
  color: #666;
}
/* 字体图标 */
.search-input icon{
  margin-right:20rpx;
}